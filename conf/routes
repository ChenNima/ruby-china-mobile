# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                            controllers.HomeController.index

GET     /barcode/:ean                                controllers.BarcodesController.barcode(ean: Long)


GET     /user/sign_up                                controllers.RegistrationsController.index
POST    /user                                        controllers.RegistrationsController.create

GET     /user/sign_in                                controllers.SessionController.init
POST    /user/sign_in                                controllers.SessionController.create
DELETE  /user/sign_out                               controllers.SessionController.destroy
GET     /user/login                                  controllers.SessionController.login

GET     /github/callback                             controllers.OAuthConsumers.callback

GET     /topics                                      controllers.TopicsController.index
GET     /topics/new                                  controllers.TopicsController.init

GET     /products                                    controllers.ProductsController.list(page: Int ?= 1)
GET     /products/:ean                               controllers.ProductsController.details(ean: Long)
GET     /products/:ean/edit                          controllers.ProductsController.edit(ean: Long)
PUT     /products/:ean                               controllers.ProductsController.update(ean: Long)
GET     /products/new                                controllers.ProductsController.newProduct
POST    /products/save                               controllers.ProductsController.save


GET     /reports                                     controllers.Reports.reports(offset:Int ?= 0, limit:Int ?= 25, fromDate: Option[String], toDate: Option[String], world: Option[String], field: Option[String], sort: Option[String])
GET     /jsroutes.js                                 controllers.Reports.jsRoutes()
GET     /reports/worldsList                          controllers.Reports.worldsList

# Map static resources from the /public folder to the /assets URL path 
GET     /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)

