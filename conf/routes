# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                            controllers.HomeController.index



GET     /user/sign_up                                controllers.RegistrationsController.index
POST    /user                                        controllers.RegistrationsController.create

GET     /user/sign_in                                controllers.SessionController.init
POST    /user/sign_in                                controllers.SessionController.create
DELETE  /user/sign_out                               controllers.SessionController.destroy

GET     /topics                                      controllers.TopicsController.index
GET     /topics/new                                  controllers.TopicsController.init


GET     /reports                                     controllers.Reports.reports(offset:Int ?= 0, limit:Int ?= 25, fromDate: Option[String], toDate: Option[String], world: Option[String], field: Option[String], sort: Option[String])
GET     /jsroutes.js                                 controllers.Reports.jsRoutes()
GET     /reports/worldsList                          controllers.Reports.worldsList

# Map static resources from the /public folder to the /assets URL path 
GET     /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)

