# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                            controllers.HomeController.index
GET     /account/sign_out                            controllers.SessionsController.destroy




GET     /topics                                      controllers.TopicsController.list
GET     /topics/new                                  controllers.TopicsController.init
POST    /topics                                      controllers.TopicsController.create
GET     /topics/$id<\d+>                           controllers.TopicsController.detail(id: Int)


GET     /admin                                       controllers.AdminController.index

GET     /:provider/callback                          controllers.OAuthConsumers.callback(provider: String)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)

